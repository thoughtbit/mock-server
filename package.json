{
  "name": "mock-server",
  "version": "2.0.0",
  "description": ":whale: 好用的模拟数据服务",
  "scripts": {
    "start": "pnpm build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "pnpm clean && tsc && tsc-alias && copyfiles -u 1 'src/config/cert/**' dist && copyfiles -u 1 'src/config/keys/**' dist && copyfiles -u 1 'src/public/**' dist",
    "build:swc": "swc src -d dist --source-maps --copy-files",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "pnpm lint -- --fix",
    "deploy:prod": "pnpm build && pm2 start pm2.config.js --only prod",
    "deploy:dev": "pm2 start pm2.config.js --only dev",
    "deploy:stop": "pm2 stop pm2.config.js",
    "deploy:restart": "pm2 restart pm2.config.js",
    "msw:init": "pnpx msw init ./src/public --save",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@mswjs/data": "^0.9.0",
    "@mswjs/http-middleware": "^0.2.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.2",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "http-proxy-middleware": "^2.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "lokijs": "^1.5.12",
    "lowdb": "^3.0.0",
    "morgan": "^1.10.0",
    "msw": "^0.36.8",
    "nanoid": "^3.2.0",
    "winston": "^3.5.1",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.136",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/lokijs": "^1.5.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.15",
    "@types/http-errors": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.5.0",
    "lint-staged": "^11.2.6",
    "node-config": "^0.0.2",
    "node-gyp": "^8.4.1",
    "nodemon": "^2.0.15",
    "pm2": "^5.1.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "msw": {
    "workerDirectory": "src/public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtbit/mock-server.git"
  },
  "author": "moocss",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thoughtbit/mock-server/issues"
  },
  "homepage": "https://github.com/thoughtbit/mock-server#readme"
}

{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/*", "src/**/*.{spec,test,mock}.ts"],
  "verbose": true,
  "execMap": {
    "ts": "ts-node --files -r tsconfig-paths/register"
  },
  "watch": ["config", "src", ".env"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,yaml,json",
  "exec": "ts-node -r tsconfig-paths/register --transpile-only src/server.ts"
}
